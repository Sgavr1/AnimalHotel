@using AnimalHotel.Models;
<html>
    <head>
         <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
     <link href="~/css/style_navigation.css" rel="stylesheet" type="text/css">
      <link href="~/css/style_form.css" rel="stylesheet" type="text/css">
    </head>
<body>
    <header>
    <div class="nav">
    <ul class="main_nav">
    <li class ="active"> <a href="/Admin/Staff">Співробітники</a></li>
    <li>  <a href="/Admin/Room">Кімнати</a></li>
    <li> <a href="/Admin/Report">Звіти</a></li>
        <li > <a href="/Admin/Service">Послуги</a></li>
    </ul>
    </div>
    </header>
    <div>
    <div class="all_form">
        <h2>Форма добавления сотрудника</h2>
        <form action="/Admin/AddStaff">
            <ul>
                <li>
                    <label>Логин</label>
                </li>
                <li>
                    <input type="text" name="login" />
                </li>
                <li>
                    <label>Пароль</label>
                </li>
                <li>
                    <input type="text" name="password" />
                </li>
                <li>
                    <label>Телефон</label>
                </li>
                <li>
                    <input type="tel" name="tel" />
                </li>
                <li>
                    <label>Имя</label>
                </li>
                <li>
                    <input type="text" name="first_name" />
                </li>
                <li>
                    <label>Фамилия</label>
                </li>
                <li>
                    <input type="text" name="last_name" />
                </li>
                <li>
                    <label>Дата рождения</label>
                </li>
                <li>
                    <input type="date" name="day_of_birth" />
                </li>
                <li>
                    <label>Город</label>
                </li>
                <li>
                    <input type="text" name="city" />
                </li>
                <li>
                    <label>Улица</label>
                </li>
                <li>
                    <input type="text" name="street" />
                </li>
                <li>
                    <label>Номер дома</label>
                </li>
                <li>
                    <input type="number" name="number_house" />
                </li>
                <li>
                    <label>Зарплата</label>
                </li>
                <li>
                    <input type="number" name="salary" />
                </li>
            </ul>
          <input type="submit"  value= "Добавить новое сотрудника"/>
        </form>
        </div>


        <div>
            <p>@ViewBag.Branch.city @ViewBag.Branch.street @ViewBag.Branch.number_house</p>
            @foreach (StaffModel staff in ViewBag.Staffs)
            {
                <p>@staff.infoPersone.first_name @staff.infoPersone.last_name @staff.account.role.name @staff.id</p>
                <form action="/Admin/UpdateSalaryStaff">
                    <ul>
                        <li>
                            <input type="number" name="id" value="@staff.id" /> <!-- недолжно быть видно -->
                        </li>
                        <li>
                            <label>Зарплата</label>
                        </li>
                        <li>
                            <input type="number" name="salary" value="@staff.salary" />
                        </li>
                    </ul>
                    <button type="submit">Изменить зарплату</button>
                </form>
                <a href="/Admin/FireStaff/@staff.id">Уволить</a>
            }
        </div>
    </div>
</body>
</html>